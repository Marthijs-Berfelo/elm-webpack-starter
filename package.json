{
  "name": "elm-webpack-starter",
  "description": "Webpack setup for writing Elm apps",
  "version": "0.8.6",
  "license": "MIT",
  "author": "Peter Morawiec",
  "repository": {
    "type": "git",
    "url": "https://github.com/moarwick/elm-webpack-starter"
  },
  "scripts": {
    "start": "webpack-dev-server --hot --inline",
    "prebuild": "gulp dist-clean",
    "build": "webpack",
    "test": "elm-test",
    "reinstall": "npm run prereinstall && npm i -g elm && yarn install && gulp elm",
    "prereinstall": "yarn add -D shx && shx rm -rf node_modules && npm uninstall -g elm"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "bootstrap-sass": "^3.3.7",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.27.3",
    "elm": "^0.19.1-1",
    "elm-format": "^0.8.2",
    "elm-test": "^0.19.1",
    "elm-webpack-loader": "^6.0.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "gulp": "^4.0.2",
    "gulp-elm": "^0.8.2",
    "gulp-run-command": "^0.0.9",
    "html-webpack-plugin": "^2.28.0",
    "jquery": "^3.2.1",
    "node-sass": "^4.5.1",
    "postcss-loader": "^1.3.3",
    "sass-loader": "^6.0.3",
    "shx": "^0.3.2",
    "style-loader": "^0.16.0",
    "url-loader": "^0.5.8",
    "webpack": "^2.3.1",
    "webpack-dev-server": "^2.4.2",
    "webpack-merge": "^4.1.0"
  }
